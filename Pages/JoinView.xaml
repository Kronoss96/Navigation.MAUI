<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Navigation.Pages.JoinView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout Padding="20" MaximumWidthRequest="600">
        <Image Source="banner.png"
               Aspect="AspectFit" 
                HeightRequest="100" 
                HorizontalOptions="Center"
                Margin="0,0,0,20"/>
        <VerticalStackLayout>
            <Label Text="Usuario" />
            <Entry Margin="0,2,0,0" Text="{Binding Name}" />
        </VerticalStackLayout>

        <VerticalStackLayout Margin="0,10,0,0">
            <Label Text="Password" />
            <Entry Margin="0,2,0,0" Text="{Binding Address}" />
        </VerticalStackLayout>

        <Button
            Margin="0,20,0,0"
            Command="{Binding SubmitCommand}"
            HorizontalOptions="Start"
            Text="Enviar" />
    </VerticalStackLayout>
</ContentPage>